	("^\\(resent-[^ \t\n:]+:\\) \\(.*\\)$"
	 (1 'vm-resent-header-name-face)
	 (2 'vm-header-content-face))
	;; Other headers
	("^\\([^ \t\n:]+:\\) \\(.*\\)$"
	 (1 'vm-header-name-face)
	 (2 'vm-header-content-face))
 	;; citations
        ("^[a-z0-9 \t]*[>|}]\\(.*\\)$"
