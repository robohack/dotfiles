#
#	.kshpwd - local stuff to abbreviate PWD...
#
#ident	"@(#)HOME:.kshpwd	30.1	10/06/18 18:56:53 (woods)"

unalias cd
alias cd='_cd'
function _cd
{
	\cd $*
	case "$PWD" in
	*/work.d/*)
		BANNER_PWD='work.d:'"${PWD#*/work.d/}"
		;;
	/work/${LOGNAME}/*)
		BANNER_PWD='mywrk:'"${PWD#/work/${LOGNAME}/}"
		;;
	/work/*)
		BANNER_PWD='work:'"${PWD#/work/}"
		;;
	${HOME})
		BANNER_PWD='~'
		;;
	$(dirname ${HOME})/*)
		BANNER_PWD='~'"${PWD#$(dirname $HOME)/}"
		;;
	/home/*)
		BANNER_PWD='~'"${PWD#/home/}"
		;;
	/usr/src/*)
		BANNER_PWD='src:'"${PWD#/usr/src/}"
		;;
	/usr/pkgsrc/*)
		BANNER_PWD='pkgsrc:'"${PWD#/usr/pkgsrc/}"
		;;
	/usr/xsrc/*)
		BANNER_PWD='xsrc:'"${PWD#/usr/xsrc/}"
		;;
	*)
		BANNER_PWD="${PWD#/}"
		;;
	esac
	if [ "$(ismpx)" = yes ] ; then
		eval myxban -l "\"$MYXBAN_L\""
	fi
	if type setban > /dev/null ; then
		setban
	fi
}

# make sure BANNER_PWD is now set as we want it,
# but _ONLY_ for interactive shells!
#
case "$0" in
-*)
	cd; cd -
	;;
esac
