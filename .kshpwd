#
#	.kshpwd - local stuff to abbreviate PWD...
#
#ident	"@(#)HOME:.kshpwd	2.3	94/11/18 00:30:14 (woods)"

if [ "$PWD" = "$HOME" ] ; then
	PWD='~'
fi
unalias cd
alias cd='_cd'
function _cd
{
	\cd $*
	case "$PWD" in
	${HOME})
		PWD='~'
		;;
	`dirname ${HOME}`/*)
		PWD='~'"${PWD#`dirname $HOME`/}"
		;;
	/home/*)
		PWD='~'"${PWD#/home/}"
		;;
	/apc/usr/web/webadmin/*)
		PWD='~'"${PWD#/apc/usr/web/webadmin/}"
		;;
	*/work.d/*)
		PWD='work.d:'"${PWD#*/work.d/}"
		;;
	*/src/*)
		PWD='src:'"${PWD#*/src/}"
		;;
	esac
	if [ "`ismpx`" = yes ] ; then
		eval myxban -l "\"$MYXBAN_L\""
	fi
	if [ "$TERM" = "xterm" ] ; then
		setban
	fi
}
