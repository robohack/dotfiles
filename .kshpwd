#
#	.kshpwd - local stuff to abbreviate PWD...
#
#ident	"@(#)HOME:.kshpwd	27.2	05/10/04 16:36:45 (woods)"

unalias cd
alias cd='_cd'
function _cd
{
	\cd $*
	case "$PWD" in
	*/work.d/*)
		PWD='work.d:'"${PWD#*/work.d/}"
		;;
	/work/${LOGNAME}/*)
		PWD='mywrk:'"${PWD#/work/${LOGNAME}/}"
		;;
	/work/*)
		PWD='work:'"${PWD#/work/}"
		;;
	${HOME})
		PWD='~'
		;;
	$(dirname ${HOME})/*)
		PWD='~'"${PWD#$(dirname $HOME)/}"
		;;
	/home/*)
		PWD='~'"${PWD#/home/}"
		;;
	/usr/src/*)
		PWD='src:'"${PWD#/usr/src/}"
		;;
	/usr/pkgsrc/*)
		PWD='pkgsrc:'"${PWD#/usr/pkgsrc/}"
		;;
	/usr/xsrc/*)
		PWD='xsrc:'"${PWD#/usr/xsrc/}"
		;;
	*)
		PWD="${PWD#/}"
		;;
	esac
	if [ "$(ismpx)" = yes ] ; then
		eval myxban -l "\"$MYXBAN_L\""
	fi
	if type setban > /dev/null ; then
		setban
	fi
}

# make sure PWD is now set as we want it...
cd; cd -
