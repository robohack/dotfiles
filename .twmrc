#	for emacs menu
#
function "start-emacs" {
	f.exec "$GNU/bin/emacs -d $DISPLAY -i &"
}

function "start-x11-emacs" {
	f.exec "/usr/ucb/rsh -n $X11HOST env PATH=$PATH DISPLAY=$DISPLAY $GNU/bin/emacs -d $DISPLAY -i &"
}

function "start-most-emacs" {
	f.exec "/usr/ucb/rsh -n most.weird.com env PATH=$PATH DISPLAY=$DISPLAY $GNU/bin/emacs -d $DISPLAY -i &"
}

function "start-kuma-emacs" {
	f.exec "/usr/ucb/rsh -n kuma.web.net env PATH=$PATH DISPLAY=$DISPLAY $GNU/bin/emacs -d $DISPLAY -i &"
}


#	for netscape menu
#
function "start-netscape" {
	f.exec "$LOCAL/netscape -display $DISPLAY &"
}

function "start-x11-netscape" {
	f.exec "/usr/ucb/rsh -n $X11HOST env PATH=$PATH DISPLAY=$DISPLAY /local/bin/netscape -display $DISPLAY &"
}

function "start-weird-netscape" {
	f.exec "/usr/ucb/rsh -n weird env PATH=$PATH DISPLAY=$DISPLAY /usr/local/bin/netscape -display $DISPLAY &"
}

#
#	for other menu
